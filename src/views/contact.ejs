<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Contact - Precioso</title>
    <link rel="stylesheet" href="/css/site.css" />
  </head>
  <body>
    <header class="site-topbar">
      <div class="site-topbar__inner">
        <div class="site-brand">
          <div>
            <h1>Precioso</h1>
            <span>Facial Salon & Spa</span>
          </div>
        </div>
        <div class="site-links">
          <a href="/">Home</a>
          <a href="/services">Services</a>
          <a href="/branches">Locations</a>
          <a href="/contact">Contact</a>
          <% if (customerLoggedIn) { %>
            <a href="/bookings">My Bookings</a>
            <a href="/customer/logout">Logout</a>
          <% } else { %>
            <a href="/customer/login">Login</a>
            <a href="/customer/register">Register</a>
          <% } %>
          <a class="cta-button" href="/bookings/new">Book an Appointment</a>
        </div>
      </div>
    </header>

      <section class="site-hero">
        <h2>Contact</h2>
        <p>Home / Contact</p>
      </section>

    <main class="site-main">
      <section class="service-card" style="margin-bottom: 24px;">
        <h3 class="section-heading">We are here to help</h3>
        <p class="section-subtitle">Contact your preferred location for booking questions, prep guidance, or changes.</p>
      </section>
      <section class="services-grid">
        <% branches.forEach(function(branch) { %>
          <div class="service-card">
            <h4><%= branch.name %></h4>
            <p class="service-meta"><%= branch.address %></p>
            <% if (branch.phone) { %>
              <p class="service-meta">Contact: <%= branch.phone %></p>
            <% } %>
          </div>
        <% }) %>
      </section>
    </main>

    <footer class="site-footer">
      <div class="site-footer__inner">
        <div>
          <h4>Booking support</h4>
          <p>Our team can recommend services or answer pre-visit questions.</p>
        </div>
        <div>
          <h4>Quick links</h4>
          <ul class="footer-links">
            <li><a href="/services">Services</a></li>
            <li><a href="/branches">Locations</a></li>
            <li><a href="/bookings/new">Book an Appointment</a></li>
            <% if (customerLoggedIn) { %>
              <li><a href="/bookings">My Bookings</a></li>
              <li><a href="/customer/logout">Logout</a></li>
            <% } else { %>
              <li><a href="/customer/login">Login</a></li>
              <li><a href="/customer/register">Register</a></li>
            <% } %>
          </ul>
        </div>
        <div>
          <h4>Good to know</h4>
          <p>Requests are confirmed by the clinic team before your visit.</p>
          <p class="note">Hours vary by location.</p>
        </div>
      </div>
    </footer>
  </body>
</html>


